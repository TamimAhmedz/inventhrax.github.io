        }

        .background-text div:first-child { position: relative; bottom: 40px; animation-delay: 0.5s; }
        .background-text div:last-child { animation-delay: 0.7s; }

        @keyframes slideUpFadeIn { to { opacity: 1; transform: translateY(0); } }

        .main-content {
            position: relative;
