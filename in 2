            </div>
    
            <div id="card2" class="info-card card-small">
                <p class="card-description">
                    Renowned for powering the backbone of premier properties...
                </p>
                <h1 class="stat-number">32</h1>
                <p class="card-description-bottom">Exclusive Delegators</p>
            </div>
        </main>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const animatedSvgElements = document.querySelectorAll('.blueprint-svg path, .blueprint-svg circle, .blueprint-svg line');
            animatedSvgElements.forEach(el => {
                const length = el.getTotalLength ? el.getTotalLength() : (2 * Math.PI * (el.r?.baseVal.value || 0));
                if (length) {
                    el.style.strokeDasharray = length;
                    el.style.strokeDashoffset = length;
                }
            });

            const canvas = document.getElementById('line-canvas');
            const ctx = canvas.getContext('2d');
            let lines = [];

            function resizeCanvas() {
                canvas.width = window.innerWidth;
                canvas.height = window.innerHeight;
            }

            function getElementCenter(selector) {
                const el = document.querySelector(selector);
                if (!el) return { x: 0, y: 0 };
                const rect = el.getBoundingClientRect();
                return { x: rect.left, y: rect.top, width: rect.width, height: rect.height };
            }
            
            class AnimatedLine {
                constructor(path, delay) {
                    this.path = path;
                    this.progress = 0;
                    this.delay = delay;
                    this.startTime = null;
                    this.duration = 2500; // Slower draw duration
                    this.wavyPoints = this.createWavyPath();
                }

                createWavyPath() {
                    const wavy = [];
                    const amplitude = 15; // How wavy the line is
                    const frequency = 0.05; // How frequent the waves are

                    let totalLength = 0;
                    for (let i = 0; i < this.path.length - 1; i++) {
                        const start = this.path[i];
                        const end = this.path[i + 1];
                        const segmentLength = Math.hypot(end.x - start.x, end.y - start.y);
                        const angle = Math.atan2(end.y - start.y, end.x - start.x);

                        // Generate points along this segment
                        for (let d = 0; d < segmentLength; d += 5) {
                            const currentDist = totalLength + d;
                            const offsetX = Math.sin(currentDist * frequency) * amplitude * Math.cos(angle + Math.PI / 2);
                            const offsetY = Math.sin(currentDist * frequency) * amplitude * Math.sin(angle + Math.PI / 2);

                            wavy.push({
                                x: start.x + Math.cos(angle) * d + offsetX,
                                y: start.y + Math.sin(angle) * d + offsetY,
                            });
                        }
                        totalLength += segmentLength;
                    }
                    wavy.push(this.path[this.path.length - 1]); // Ensure it ends exactly at the last point
                    return wavy;
                }


                draw() {
                    if (this.progress === 0) return;
                    
                    ctx.beginPath();
                    ctx.moveTo(this.wavyPoints[0].x, this.wavyPoints[0].y);

                    const maxIndex = Math.floor((this.wavyPoints.length - 1) * this.progress);
                    
                    for (let i = 1; i <= maxIndex; i++) {
                        ctx.lineTo(this.wavyPoints[i].x, this.wavyPoints[i].y);
                    }
                    
                    ctx.strokeStyle = "rgba(169, 214, 56, 0.9)";
                    ctx.lineWidth = 3;
                    ctx.shadowColor = "rgba(169, 214, 56, 1)";
                    ctx.shadowBlur = 12;
                    ctx.stroke();
                    ctx.shadowBlur = 0;
                }

                update(timestamp) {
                    if (!this.startTime) this.startTime = timestamp;
                    const elapsed = timestamp - this.startTime;

                    if (elapsed > this.delay) {
                        const drawElapsed = elapsed - this.delay;
                        this.progress = Math.min(drawElapsed / this.duration, 1);
                    }
                }
            }

            function definePaths() {
                const exploreRect = getElementCenter(".background-text div:first-child");
                const estateRect = getElementCenter(".background-text div:last-child");
                const card1Rect = getElementCenter("#card1");
                const card2Rect = getElementCenter("#card2");
                const w = window.innerWidth;
                const h = window.innerHeight;

                lines = [
                    // Top line connecting to "950+" card
                    new AnimatedLine([
                        { x: exploreRect.x + exploreRect.width * 0.8, y: exploreRect.y + exploreRect.height * 0.6 },
                        { x: w * 0.45, y: h * 0.35 },
                        { x: w * 0.55, y: h * 0.15 },
                        { x: card1Rect.x + card1Rect.width * 0.2, y: card1Rect.y },
                    ], 0),

                    // Bottom line connecting to "32" card
                    new AnimatedLine([
                        { x: estateRect.x + estateRect.width * 0.7, y: estateRect.y + estateRect.height * 0.8 },
                        { x: w * 0.5, y: h * 0.95 },
                        { x: card2Rect.x, y: card2Rect.y + card2Rect.height * 0.8},
                    ], 200),
                ];
            }
            
            function animate(timestamp) {
                ctx.clearRect(0, 0, canvas.width, canvas.height);
                let allDone = true;
                lines.forEach(line => {
                    line.update(timestamp);
                    line.draw();
                    if(line.progress < 1) allDone = false;
                });
                
                if(!allDone) {
                    requestAnimationFrame(animate);
                }
            }
            
            resizeCanvas();
            window.addEventListener('resize', () => {
                resizeCanvas();
                definePaths(); // Recalculate paths on resize
            });
            
            setTimeout(() => {
                definePaths();
                requestAnimationFrame(animate);
            }, 3300);
        });
    </script>

</body>
</html>
