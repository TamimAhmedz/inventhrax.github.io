        /* --- START: UPDATED HOVER & ACTIVE LOGIC --- */

        /* Base ACTIVE state: Solid white background */
        .new-navbar .nav-btn.active {
            background-color: var(--nav-active-bg);
            color: var(--text-dark);
            box-shadow: 0 3px 8px rgba(0,0,0,0.05);
        }

        /* HOVER on an INACTIVE button: White border effect */
        .new-navbar .nav-btn:not(.active):hover {
            background-color: transparent;
            box-shadow: inset 0 0 0 2px var(--nav-active-bg);
            color: var(--text-dark);
        }
        
        /* --- THIS IS THE NEW RULE --- */
        /* HOVER on the ACTIVE button: Black border effect */
        .new-navbar .nav-btn.active:hover {
            /* We combine the outer subtle shadow with the new inner black border */
            box-shadow: inset 0 0 0 2px var(--text-dark), 0 3px 8px rgba(0,0,0,0.05);
        }

        /* --- END: UPDATED STYLES --- */


